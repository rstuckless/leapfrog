<h2><%= @expertise.expert.name + " is knowledgeable about " + @expertise.skill.name %></h2>
<form class="form-aligned">
  <div><%= image_tag @expertise.expert.picture_url %></div>
  <div class="form-group">
    <label class="control-label">My Question Is:</label>
    <%= form_tag({:controller => "experts", :action => "submit_question"}, method: "post", class: "form-control") do %>
    <%= text_area_tag(:question) %>
    <%= submit_tag "Submit Question", class: 'btn btn-success form-inline' %>
  </div>
<% end %>
</form>
